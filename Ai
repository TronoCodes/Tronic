from transformers import pipeline

# Load a pre-trained text generation model (GPT-2)
generator = pipeline('text-generation', model='gpt2')

def ai_chatbot(prompt):
    responses = generator(prompt, max_length=50, num_return_sequences=1)
    return responses[0]['generated_text']

if __name__ == "__main__":
    print("ðŸ¤– Welcome to the AI chatbot! Type 'exit' to quit.")
    while True:
        user_input = input("You: ")
        if user_input.lower() == 'exit':
            print("Goodbye!")
            break
        reply = ai_chatbot(user_input)
        print("AI:", reply)
